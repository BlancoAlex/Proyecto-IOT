int TRIG = 13; // conectado pin 13
int ECHO = 12;// conectado pin 12
int LED  = 5; // led conectado pin 5
int duracion;
int distancia; 




void setup()
{
  pinMode(TRIG, OUTPUT); // Configuracion pin como salida
  pinMode(ECHO, INPUT); // Configuracion pin como entrads
  pinMode(LED, OUTPUT); // Configuracion pin como salida
}


void loop() {
  // tiempo de envio y resepcion 
  
  digitalWrite(TRIG, HIGH);
  delayMicroseconds(1);
  digitalWrite(TRIG, LOW);
  delayMicroseconds(1);
  
  
  //resepcion del eco de respuesta
  
  duracion =pulseIn (ECHO,HIGH); //palabra reservada pulseIn
  distancia =duracion/ 58,2; //CAlculo distancia en centimetros
  
  if(distancia<45) { //condicion 
   digitalWrite(LED, HIGH);
   }else
     digitalWrite(TRIG, lOW);
 }
